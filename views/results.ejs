<% // Render your search results here %>
<% // This is how to do comments in EJS, by the way... %>

<h2>Films: </h2>
<% if (episodes) { %> 
    <% episodes.forEach(e => { %>
        <div>
            <h2><a href="/movies/<%= e.imdbID %> "><%= e.Title %> </a></h2>
            <h2><%= e.Year %> </h2>
            <a href="/movies/<%= e.imdbID %> "><img src="<%= e.Poster %> " alt="Poster"></a>
        </div>
    <% }) %> 
<% } else { %> 
    <h3>NO MOVIE FOUND</h3>
<% } %> 
